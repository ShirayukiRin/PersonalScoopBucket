{
    "autoupdate": {
        "url": "https://r2-app.eagle.cool/releases/Eagle-$version-x64-build$matchBuild.exe#installer.exe"
    },
    "bin": [
        [
            "Eagle.exe",
            "Eagle",
            "--user-data-dir=\"$dir\\User Data\""
        ]
    ],
    "checkver": {
        "jsonpath": "$.links.windows",
        "regex": "//eaglefile.oss-cn-shenzhen.aliyuncs.com/releases/Eagle-(?<version>(.+?))-x64-build(?<build>(.+?))\\.exe",
        "replace": "${version}",
        "url": "https://eagle.cool/check-for-update"
    },
    "depends": "sudo",
    "description": "Eagle helps you become a happier, better designer. A new way to collect, search and organize your image files in a logical way and all in one place.",
    "hash": "666594b17fd953304adf15e6c7133ec1e5bc4121be742e7946a81e75685f95ff",
    "homepage": "https://eagle.cool/",
    "installer": {
        "script": "sudo Start-Process -Filepath \"$dir\\installer.exe\" -WorkingDirectory \"$dir\" -ArgumentList \"/S /D=$dir\" -Wait"
    },
    "license": {
        "identifier": "Shareware",
        "url": "https://en.eagle.cool/privacy"
    },
    "persist": "User Data",
    "post_install": [
        "sudo Remove-Item -path \"$dir\\installer.exe\" -Force",
        "if (!(Test-Path \"$dir\\User Data\\*\") -and (Test-Path \"$env:AppData\\Eagle\")) {",
        "    info '[Portable Mode]: Copying user data...'",
        "    Copy-Item \"$env:AppData\\Eagle\\*\" \"$dir\\User Data\" -Recurse",
        "}"
    ],
    "shortcuts": [
        [
            "Eagle.exe",
            "Eagle",
            "--user-data-dir=\"$dir\\User Data\""
        ]
    ],
    "url": "https://r2-app.eagle.cool/releases/Eagle-4.0-x64-build1.exe",
    "version": "4.0"
}
